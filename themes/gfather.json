{
  "$schema": "vscode://schemas/color-theme",
  "name": "The Godfather",
  "type": "dark",

  "colors": {
    "foreground": "#fffefb",

    "editor.background": "#040303",
    "editor.foreground": "#D7D3C7",
    "editorCursor.foreground": "#4e3b14",
    
    "editor.selectionBackground": "#251F1D80",
    "editor.inactiveSelectionBackground": "#251F1D40",

    "editor.lineHighlightBackground": "#251F1D40",
    "editor.lineHighlightBorder": "#251F1D",

    "editorLineNumber.foreground": "#251F1D",
    "editorLineNumber.activeForeground": "#D4BE87",

    "editorIndentGuide.background": "#251F1D70",
    "editorIndentGuide.activeBackground": "#BE984A90",

    "editorBracketMatch.background": "#251F1D80",
    "editorBracketMatch.border": "#D4BE87",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#D7D3C7",
    "sideBar.border": "#251F1D",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#D4BE87",
    "activityBar.activeBorder": "#BE984A",
    "activityBar.inactiveForeground": "#a02800b4",

    "activityBarBadge.background": "#881206",
    "activityBarBadge.foreground": "#E4DDCD",

    "titleBar.activeBackground": "#180a0a",
    "titleBar.activeForeground": "#D7D3C7",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#D7D3C7",

    "tab.activeBackground": "#251F1D",
    "tab.activeForeground": "#ffebbb",
    "tab.activeBorderTop": "#941010",

    "tab.inactiveBackground": "#000000",
    "tab.inactiveForeground": "#7a3939",
    "tab.border": "#000000",

    "panel.background": "#040303",
    "panel.border": "#251F1D",

    "input.background": "#251F1D",
    "input.foreground": "#D7D3C7",
    "input.border": "#BE984A",

    "list.hoverBackground": "#251F1D80",
    "list.activeSelectionBackground": "#251F1D",
    "list.inactiveSelectionBackground": "#251F1D60",

    "button.background": "#BE984A",
    "button.foreground": "#040303",
    "button.hoverBackground": "#D4BE87",

    "badge.background": "#D4BE87",
    "badge.foreground": "#040303",

    "terminal.background": "#040303",
    "terminal.foreground": "#D7D3C7",
    "terminalCursor.foreground": "#BE984A",

    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#881206",
    "terminal.ansiGreen": "#DAC7A0",
    "terminal.ansiYellow": "#D4BE87",
    "terminal.ansiBlue": "#251F1D",
    "terminal.ansiMagenta": "#BE984A",
    "terminal.ansiCyan": "#E4DDCD",
    "terminal.ansiWhite": "#D7D3C7"
  },

  "tokenColors": [
    {
      "scope": "comment",
      "settings": { "foreground": "#251F1D", "fontStyle": "italic" }
    },
    {
      "scope": ["keyword", "storage"],
      "settings": { "foreground": "#D4BE87", "fontStyle": "bold" }
    },
    {
      "scope": ["string", "constant.character"],
      "settings": { "foreground": "#DAC7A0" }
    },
    {
      "scope": ["variable", "identifier"],
      "settings": { "foreground": "#D7D3C7" }
    },
    {
      "scope": ["entity.name.function"],
      "settings": { "foreground": "#E4DDCD", "fontStyle": "bold" }
    },
    {
      "scope": ["type", "support.type"],
      "settings": { "foreground": "#BE984A" }
    },
    {
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#DAC7A0" }
    },
    {
      "scope": ["constant", "entity.name.constant"],
      "settings": { "foreground": "#D4BE87" }
    },
    {
      "scope": ["punctuation", "meta.brace"],
      "settings": { "foreground": "#D7D3C7" }
    },
    {
      "scope": ["invalid", "error"],
      "settings": { 
        "foreground": "#E4DDCD",
        "background": "#881206"
      }
    }
  ]
}
